{
    "kind": "Namespace",
    "apiVersion": "v1",
    "metadata": {
        "name": "{{item.name}}",
         {% include "include/labels.j2" %}

        {% if item.network_policy is defined %}
        , "annotations":{
            "net.beta.kubernetes.io/network-policy": "{{ item.network_policy | to_json | regex_replace('(?<!\\\)\"','\\\"') }}"
        }
        {% endif %}
    }
}